<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.druciak.escorerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/volleyball"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/volleyball_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.GoodbyeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_goodbye"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".activities.MainPanelActivity"
            android:label="@string/title_activity_main_panel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.CreateAccountActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>